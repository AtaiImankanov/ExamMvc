@model ExamMvc.ViewModels.BookPageModel

@{
    ViewData["Title"] = "Register";
}

            @if(@Model==null){
            <form action="" method="post">
                <div class="form-group">
                <label >Email</label>
                <input name="Email"  class="form-control" />
                
            </div>  
                 <button name="Email" value="Create">Email</button>
            </form>
            }
            @if(@Model!=null){
                    <div class ="row">
@foreach (var item in @Model.Books) {
    <div class="card col-3" style="width: 18rem;">
  <img src="@item.Pic" class="card-img-top" alt="image">
  <div class="card-body">
      <ul class="list-group">
  <li class="list-group-item">Name = @item.Name</li>
  <li class="list-group-item">Author =@item.AuthorName</li>
  <li class="list-group-item">Status =@item.Status</li>
                <a asp-action="Details" asp-controller="Books" asp-route-id="@item.Id">Details</a> 
                
                <a asp-action="Back" asp-controller="Books" asp-route-BookId="@item.Id">back to library</a>
                
</ul>  
  </div>
</div>     
}
</div>
            }